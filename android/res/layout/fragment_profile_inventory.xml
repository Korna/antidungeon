<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.layoutCode.Profile.ProfileInventoryFragment">


    <GridView
        android:id="@+id/gridView_inventory"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/layout_character_item_build"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/layout_character_item_build"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".View.layoutCode.Fragments.CharacterItemBuildFragment"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView_accessory"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/imageView_hand_shield"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView_ring"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignStart="@+id/imageView_accessory"
            android:layout_below="@+id/imageView_accessory"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView_legs"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignStart="@+id/imageView_body"
            android:layout_below="@+id/imageView_body"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView_weapon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/imageView_head"
            android:layout_toStartOf="@+id/imageView_legs"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView_hand_shield"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/imageView_head"
            android:layout_toEndOf="@+id/imageView_body"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView_body"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignStart="@+id/imageView_head"
            android:layout_below="@+id/imageView_head"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            app:srcCompat="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/imageView_hands"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignStart="@+id/imageView_ring"
            android:layout_below="@+id/imageView_ring"
            app:srcCompat="?android:attr/selectableItemBackground" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_inventory_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="19dp"
        android:text="Item Name"
        android:textSize="18sp" />

</RelativeLayout>
