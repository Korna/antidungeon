<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kom.hikeside.layoutCode.Fragments.StatsFragment">


    <RelativeLayout
        android:id="@+id/layout_common_stats"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/layout_character_stats"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout_character_stats"
            android:layout_marginStart="48dp"
            android:layout_marginTop="27dp"
            android:text="Class" />

        <TextView
            android:id="@+id/textView_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_name"
            android:layout_toEndOf="@+id/textView_name"
            android:text="0" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_class"
            android:layout_toEndOf="@+id/textView_class"
            android:text="Name" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_character_stats"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp">

        <TextView
            android:id="@+id/textView_will"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_intelligence"
            android:layout_alignBottom="@+id/textView_intelligence"
            android:layout_alignParentEnd="true"
            android:text="0" />

        <TextView
            android:id="@+id/textView_stamina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="0" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_luck"
            android:layout_toStartOf="@+id/textView_luck"
            android:text="Luck" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView_stamina"
            android:text="Stamina" />

        <TextView
            android:id="@+id/textView_intelligence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:text="0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="36dp"
            android:text="Agility" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_will"
            android:layout_toStartOf="@+id/textView_will"
            android:text="Will" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="37dp"
            android:text="Intelligence" />

        <TextView
            android:id="@+id/textView_agility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_toEndOf="@+id/textView4"
            android:text="0" />

        <TextView
            android:id="@+id/textView_luck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_agility"
            android:layout_toEndOf="@+id/textView10"
            android:text="0" />

        <TextView
            android:id="@+id/textView_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_toEndOf="@+id/textView3"
            android:text="0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Strength" />
    </RelativeLayout>

</RelativeLayout>
