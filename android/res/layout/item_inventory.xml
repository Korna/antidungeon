<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/textView_item_amount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="18sp"
            android:layout_above="@+id/textView_name_build"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView_name_build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="Its UT item omg"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"></TextView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@android:drawable/ic_menu_compass"
            android:layout_above="@+id/textView_name_build"
            android:layout_toStartOf="@+id/textView_item_amount" />
    </RelativeLayout>
</LinearLayout>